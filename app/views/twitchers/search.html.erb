<div class="row">
  <div class="col-md-5 mx-auto">  
    <%= form_tag search_results_path, { class: "d-flex me-2", method: :post, remote: true } do %>
      <div class="input-group">
        <%= text_field_tag "query", "", class: "form-control border", placeholder: "Looking for a twitcher?...", autocomplete: :off, required: true %>
        <%= button_tag type: :submit, id: "search-twitcher", class: "btn btn-outline-success" do %>
          <i class="fa-solid fa-magnifying-glass"></i> Search
        <%end%>
        </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div id="results">
  </div>
</div>

<!-- Loader -->
<div id="loading-results" class="text-center mt-4" style="display: none;">
  <div class="spinner-border text-primary text-center" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>